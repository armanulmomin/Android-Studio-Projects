<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/colorSilver"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mytext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Please enter a number"
        android:layout_margin="16dp"
        android:focusable="false"
        android:gravity="end"
        android:textAlignment="center"
        android:background="@drawable/background_edt"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BSpace"
                android:textSize="15dp"
                android:background="@drawable/background_btn"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />
            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="clear"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/xpowery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x^y"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="40dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="40dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:background="@drawable/background_btn"
                android:textColor="@color/colorWhite"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            >
            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/background_btn"
                android:layout_margin="5dp"



                />

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"

                />
            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/background_btn"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">
            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="40dp"
                android:textStyle="bold"
                android:background="@drawable/background_btn"
                android:layout_margin="5dp"
                />


            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="40dp"
                android:textStyle="bold"
                android:background="@drawable/background_btn"
                android:layout_margin="5dp"

                />
            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">
            <Button
                android:id="@+id/xpower2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x^2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/background_btn"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />

            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="40dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/nfactorial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="N!"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/background_btn"
                android:layout_margin="5dp"
                />




            <Button
                android:id="@+id/squareroot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="SQRT"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"
                android:background="@drawable/background_btn"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>